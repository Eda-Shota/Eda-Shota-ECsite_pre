<div class="container ml-5">

  <h1>ジャンル編集</h1>
  <%= form_with model: @item_genre, url: admin_genres_path do |f| %>
    <div class="row">
      <p class="col-md-2">ジャンル名</p>
      <div class="field col-md-3">
        <%= f.text_field :genre_name, placeholder: "ジャンル名", :size=>"30", required: true, autocomplete: "genre_name" %>
      </div>
      <div class="field col-md-7">
        <%= f.submit "新規登録", class: "btn btn-sm　text-light btn-success" %>
      </div>
    </div>
  <% end %>

<table class="table">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @item_genres.each do |genre| %>
    <tr>
      <td><%= genre.genre_name %></td>
      <td>
        <%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-sm btn-success" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

</div> 