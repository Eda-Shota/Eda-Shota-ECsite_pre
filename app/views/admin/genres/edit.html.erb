<div class="container ml-5">

  <h1>ジャンル一覧・追加</h1>
  <%= form_with model: @item_genre, url: admin_genre_path(@item_genre.id) do |f| %>
    <div class="row">
      <p class="col-md-2">ジャンル名</p>
      <div class="field col-md-3">
        <%= f.text_field :genre_name, :size=>"30", required: true, autocomplete: "genre_name", class: "form-control genre_name" %>
      </div>
      <div class="field col-md-7">
        <%= f.submit "変更を保存", class: "btn btn-sm　text-light btn-success" %>
      </div>
    </div>
  <% end %>

</div> 
