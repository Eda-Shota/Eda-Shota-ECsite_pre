<div class="container ml-5">
  <div class="row">
    <h1 class="col-md-2">商品一覧</h1>
    <div class="offset-md-8 col-md-2">
    <%= link_to new_admin_item_path do %>
      <i class="fa-solid fa-plus"></i>
    <% end %>
    </div>
  </div> 


<table class='table'>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>提供価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td>
          <%= link_to admin_item_path(item.id) do %>
            <%= item.item_name %>
          <% end %>
        </td>
        <td><%= item.price %></td>
        <td><%= item.item_genre.genre_name %></td>
        <td class="<%= ' text-success' if item.status == "販売中" %> <%= ' text-secondary' if item.status == "販売停止中" %>"><%= item.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @items %>

</div> 